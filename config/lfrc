# functions
cmd mkdir ${{
  printf "Directory Name: "
  read ans
  mkdir $ans
}}
cmd mkfile ${{
  printf "File Name: "
  read ans
  touch $ans
}}
cmd imgpreview ${{
    $sxiv -a "$f" % tr -d "\n" 
}}
cmd changedir ${{
    $changeDir
}}
cmd sortallbysize :{{
    set sortby size
    set reverse true
    set info size
    glob-select *
    calcdirsize
    unselect
}}
cmd originalss :{{
    set sortby size
    set info size
}}
cmd vsedit ${{
    file="$f"
        if [[ -e "$file" ]]; then
            fullPath=$(realpath "$file")
            shortName=$(basename "$f")
            dunstify "+mvim e:" "$shortName"
            tmux send-keys -t 1 ":e $fullPath" C-m
        else
            echo "file doesn't exist."
        fi
}}
cmd hellopath $echo "$PWD"
cmd setwallpaper  $feh --bg-scale "$f"
cmd setdefaultwallpaper $feh --bg-scale ~/dotfiles/.stow-local-ignore/wallpaper.png
cmd setartwallpaper $feh --bg-scale ~/core/images/wallpapers/field-tree-art.jpg  
# Basic Functions
map . set hidden!
